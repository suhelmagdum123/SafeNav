<?xml version="1.0" encoding="utf-8"?>
<de.tubs.ibr.dtn.chat.RosterItem
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/roster_item_layout"
	android:layout_width="fill_parent"
	android:orientation="horizontal"
	android:padding="4dp"
	android:id="@+id/roster_item">

	<ImageView
		android:id="@+id/icon"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_weight="0"
		android:layout_margin="8dp"
		android:src="@drawable/online" />

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="77dp"
		android:padding="4dp">

		<TextView
			android:id="@+id/label"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:text="@string/nickname"
			android:textSize="18sp" />

		<ImageView
			android:id="@+id/signed_indicator"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@+id/label"
			android:layout_below="@+id/label"
			android:paddingLeft="2dip"
			android:paddingTop="2dip"
			android:src="@drawable/ic_signed"
			android:visibility="gone" />

		<TextView
			android:id="@+id/bottomtext"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/label"
			android:layout_toRightOf="@+id/signed_indicator"
			android:ellipsize="marquee"
			android:padding="2dip"
			android:text="@string/no_status_message"
			android:textSize="12sp"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true" />

	</RelativeLayout>

	<ImageView
		android:id="@+id/hinticon"
		android:layout_width="24dp"
		android:layout_height="match_parent"
		android:layout_margin="2dp"
		android:layout_weight="0"
		android:src="@drawable/ic_draft" />


</de.tubs.ibr.dtn.chat.RosterItem>