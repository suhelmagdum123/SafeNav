<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    
    <fragment android:name="de.tubs.ibr.dtn.chat.MeFragment"
        android:id="@+id/me_fragment"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/me_image"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/me_image"
        android:text="Show Map Loaction" />
    
    <fragment android:name="de.tubs.ibr.dtn.chat.RosterFragment"
        android:id="@+id/roster_fragment"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />



</LinearLayout>